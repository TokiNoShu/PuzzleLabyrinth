<Window x:Class="PuzzleLabyrinth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Логический лабиринт" Height="350" Width="525"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="QuestionText" Margin="10" FontSize="16"/>

        <Button x:Name="Option1Button" Margin="10,50,10,234" Click="OptionButton_Click" FontSize="20"/>
        <Button x:Name="Option2Button" Margin="10,100,10,184" Click="OptionButton_Click" FontSize="20"/>

        <Button x:Name="HintButton" Content="Подсказка" Margin="10,150,10,100" Click="HintButton_Click" FontSize="20"/>
    
        <TextBlock x:Name="StatusText" Margin="10,279,10,0" FontSize="20"/>
        <TextBlock x:Name="LastRound" Margin="0,234,0,41" FontSize="15" HorizontalAlignment="Center"/>
    </Grid>
</Window>