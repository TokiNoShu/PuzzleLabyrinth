<Window x:Class="PuzzleLabyrinth.Utils.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Магазин" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <!-- Центрируем окно -->
    <Grid>
        <TextBlock x:Name="ShopText" Margin="10" FontSize="16" Text="Добро пожаловать в магазин!"/>
        <Button x:Name="BuyHintButton" Content="Купить подсказку (10 тугриков)" Margin="10,50,10,10" Click="BuyHintButton_Click"/>
        <Button x:Name="BuyLifeButton" Content="Купить жизнь (20 тугриков)" Margin="10,100,10,10" Click="BuyLifeButton_Click"/>
        <Button x:Name="ExitButton" Content="Выйти" Margin="10,150,10,10" Click="ExitButton_Click"/>
        <TextBlock x:Name="CurrencyText" Margin="10,200,10,10" FontSize="14"/>
    </Grid>
</Window>